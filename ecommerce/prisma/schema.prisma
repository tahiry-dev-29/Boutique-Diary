// prisma/schema.prisma

// 1. Définir le driver comme 'postgresql'
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// 2. Un modèle simple pour le test
model Post {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  content   String?
  createdAt DateTime @default(now())
}

// Role hierarchy: CUSTOMER < EMPLOYEE < ADMIN < SUPERADMIN
enum Role {
  CUSTOMER
  EMPLOYEE
  ADMIN
  SUPERADMIN
}

model User {
  id        Int              @id @default(autoincrement())
  username  String           @unique
  email     String           @unique
  password  String
  role      Role             @default(CUSTOMER)
  isActive  Boolean          @default(true)
  photo     String?          @db.Text
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  orders    Order[]
  carts     Cart[]
  reviews   Review[]
  replies   ReviewReply[]
  reactions ReviewReaction[]
  wishlist  WishlistItem[]
  addresses Address[]
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String         @db.VarChar(255)
  description String?        @db.Text
  reference   String         @unique @db.VarChar(100)
  images      ProductImage[]
  price       Float
  stock       Int            @default(0)

  // Lifecycle & Soft Delete
  status    String    @default("DRAFT") // 'DRAFT' | 'PUBLISHED'
  deletedAt DateTime?

  // Nouveaux champs pour filtrage avancé
  brand  String?  @db.VarChar(100)
  colors String[] @default([])
  sizes  String[] @default([])

  // Indicateurs de type de produit
  isNew        Boolean @default(false)
  isPromotion  Boolean @default(false)
  oldPrice     Float?
  isBestSeller Boolean @default(false)

  // Avis clients
  rating      Float? @default(0)
  reviewCount Int    @default(0)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  promotionRuleId Int?
  promotionRule   PromotionRule? @relation(fields: [promotionRuleId], references: [id])

  variations     ProductVariation[]
  stockMovements StockMovement[] // Relation for history
  cartItems      CartItem[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  orderItems     OrderItem[]
  reviews        Review[]
  wishlistedBy   WishlistItem[]
  blogPost       BlogPost?
}

// Cart Models
model Cart {
  id        String     @id @default(cuid())
  sessionId String?    @unique
  userId    Int?
  user      User?      @relation(fields: [userId], references: [id])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  color     String?
  size      String?
  price     Float
  createdAt DateTime @default(now())

  @@index([cartId])
  @@index([productId])
}

model ProductVariation {
  id        Int     @id @default(autoincrement())
  sku       String  @unique
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Attributes
  color String?
  size  String?

  // Pricing & Stock
  price    Decimal  @db.Decimal(10, 2)
  oldPrice Decimal? @db.Decimal(10, 2)
  stock    Int      @default(0)

  // Promotion Linking
  promotionRuleId Int?
  promotionRule   PromotionRule? @relation(fields: [promotionRuleId], references: [id])

  // Status
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, color, size])
  @@index([sku])
  @@index([productId])
}

model ProductImage {
  id              Int             @id @default(autoincrement())
  url             String          @db.Text
  reference       String?         @db.VarChar(100)
  color           String?         @db.VarChar(50)
  sizes           String[]        @default([])
  price           Float?
  oldPrice        Float?
  stock           Int?
  isNew           Boolean         @default(false)
  isBestSeller    Boolean         @default(false)
  isPromotion     Boolean         @default(false)
  promotionRuleId Int?
  promotionRule   PromotionRule?  @relation(fields: [promotionRuleId], references: [id])
  categoryId      Int?
  category        Category?       @relation(fields: [categoryId], references: [id])
  productId       Int
  product         Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  stockMovements  StockMovement[] // Relation for history
  orderItems      OrderItem[]
}

model Category {
  id          Int            @id @default(autoincrement())
  name        String         @db.VarChar(255)
  description String?        @db.Text
  slug        String         @unique @db.VarChar(255)
  products    Product[]
  images      ProductImage[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model SiteSettings {
  id        Int      @id @default(autoincrement())
  key       String   @unique @db.VarChar(100)
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(100) // Ex: "CUSTOMIZED"
  subtitle    String?  @db.VarChar(100) // Ex: "FASHION"
  description String?  @db.Text
  buttonText  String?  @db.VarChar(50) // Ex: "READ MORE"
  buttonLink  String?  @db.VarChar(255) // Ex: "/shop"
  imageUrl    String   @db.Text
  order       Int      @default(1) // Position in slider (1-5)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
}

model Admin {
  id              Int              @id @default(autoincrement())
  name            String           @db.VarChar(100)
  email           String           @unique
  password        String
  role            String           @default("admin") // "admin" | "superadmin"
  isActive        Boolean          @default(true)
  isOnline        Boolean          @default(false)
  lastSeen        DateTime? // Track online status
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  reviewReplies   ReviewReply[]
  reviewReactions ReviewReaction[]
}

// New model for Stock Audit/History
model StockMovement {
  id Int @id @default(autoincrement())

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  productImageId Int?
  productImage   ProductImage? @relation(fields: [productImageId], references: [id], onDelete: SetNull)

  type          String // "ADJUSTMENT", "ORDER", "RETURN", "RECEIVED"
  quantity      Int // The change amount (e.g. +10, -5) or final amount? Usually change. But for Audit "Physical Count" we calc diff.
  previousStock Int // Snapshot before change
  newStock      Int // Snapshot after change

  reason String? // "Damage", "Expire", "Stocktake", etc.
  note   String? @db.Text

  createdBy String? // Admin username or ID

  createdAt DateTime @default(now())

  @@index([productId])
  @@index([productImageId])
}

model Order {
  id        String @id @default(cuid())
  reference String @unique
  total     Float
  status    String @default("PENDING") // PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED, COMPLETED

  customerId Int?
  customer   User? @relation(fields: [customerId], references: [id])

  items OrderItem[]

  // Payment Relation
  transactions PaymentTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stockReduced Boolean @default(false)
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  // Optional: Track specific variant for stock management
  productImageId Int?
  productImage   ProductImage? @relation(fields: [productImageId], references: [id])

  quantity Int
  price    Float

  @@index([orderId])
  @@index([productId])
  @@index([productImageId])
}

// Payment Module

model PaymentMethod {
  id          Int     @id @default(autoincrement())
  code        String  @unique // 'mvola', 'orange_money', 'stripe', 'cash'
  name        String
  description String?
  logoUrl     String?
  isActive    Boolean @default(false)
  isDefault   Boolean @default(false)

  // Configuration (API keys, secrets, merchant IDs) stored securely
  config Json? // e.g. { "merchantData": "...", "apiKey": "..." }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaymentTransaction {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  amount   Float
  currency String @default("MGA")

  provider  String // 'mvola', 'orange_money', 'manual'
  reference String? // External transaction ID (e.g. MVola TransID)

  status String // 'PENDING', 'SUCCESS', 'FAILED', 'CANCELLED', 'REFUNDED'

  metadata Json? // Store full provider response/details

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([reference])
  @@index([status])
}

// Marketing Module

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

model PromoCode {
  id    Int          @id @default(autoincrement())
  code  String       @unique @db.VarChar(50)
  type  DiscountType @default(PERCENTAGE)
  value Float

  // Validity
  startDate DateTime?
  endDate   DateTime?

  // Limits
  usageLimit Int? // Max total uses
  usageCount Int  @default(0) // Current uses

  minOrderAmount Float? // Min cart total to apply

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([isActive])
}

model PromotionRule {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(255)
  priority Int    @default(0) // Higher applies first? or last? Usually higher first.

  // Logic stored as JSON for flexibility
  conditions Json // e.g. { type: "cart_total_gt", value: 100 }
  actions    Json // e.g. { type: "discount_percentage", value: 20 }

  startDate DateTime?
  endDate   DateTime?

  products Product[]

  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  productVariations ProductVariation[]
  productImages     ProductImage[]

  @@index([isActive])
}

model Review {
  id         Int     @id @default(autoincrement())
  rating     Float
  comment    String  @db.Text
  isVerified Boolean @default(false)
  tags       Json? // e.g. ["Great quality", "Easy setup"]

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  replies   ReviewReply[]
  reactions ReviewReaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
}

model ReviewReply {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  reviewId  Int
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  adminId   Int?
  admin     Admin?   @relation(fields: [adminId], references: [id], onDelete: SetNull)
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([reviewId])
}

model ReviewReaction {
  id       Int    @id @default(autoincrement())
  type     String // 'LIKE', 'LOVE', 'LAUGH', etc.
  reviewId Int
  review   Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  userId   Int?
  user     User?  @relation(fields: [userId], references: [id], onDelete: SetNull)
  adminId  Int?
  admin    Admin? @relation(fields: [adminId], references: [id], onDelete: SetNull)

  @@unique([reviewId, userId, adminId, type])
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model Address {
  id          String   @id @default(cuid())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label       String? // e.g., "Home", "Office"
  street      String
  city        String
  postalCode  String
  country     String   @default("Madagascar")
  phoneNumber String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog system - AI generated articles for products
model BlogPost {
  id         Int     @id @default(autoincrement())
  title      String  @db.VarChar(255)
  slug       String  @unique @db.VarChar(300)
  excerpt    String? @db.Text
  content    String  @db.Text
  coverImage String? @db.Text

  // Link to product
  productId Int     @unique
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Metadata
  isPublished Boolean @default(false)
  viewCount   Int     @default(0)

  // SEO
  metaTitle       String? @db.VarChar(255)
  metaDescription String? @db.Text

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  @@index([productId])
  @@index([isPublished])
  @@index([slug])
}
